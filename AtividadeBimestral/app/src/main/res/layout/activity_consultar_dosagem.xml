<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:shrinkColumns="*"  android:stretchColumns="*" android:background="#ffffff">

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/TextView00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Base para diluição dos larvicidas:"
            android:textAlignment="center"
            android:layout_span="3"
            android:padding="18dip"
            android:background="#FFFFFF"
            android:textColor="#000000"/>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/TextView01"
            android:layout_weight="1"
            android:background="#bfbfbf"
            android:gravity="center"
            android:padding="18dip"
            android:text="Temephos"
            android:textAlignment="center"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_weight="1"
            android:background="#bfbfbf"
            android:gravity="center"
            android:padding="18dip"
            android:text="1 grama/10 litros de água"
            android:textAlignment="center"
            android:textColor="#000000" />
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/TextView03"
            android:text="BTI"
            android:layout_weight="1"
            android:background="#999999"
            android:textColor="#000000"
            android:padding="18dip"
            android:gravity="center"/>

        <TextView
            android:id="@+id/TextView04"
            android:text="1 grama/50 litros de água"
            android:layout_weight="1"
            android:background="#999999"
            android:textColor="#000000"
            android:padding="18dip"
            android:gravity="center"/>
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/TextView05"
            android:text="Metoprene"
            android:layout_weight="1"
            android:background="#bfbfbf"
            android:textColor="#000000"
            android:padding="18dip"
            android:gravity="center"/>

        <TextView
            android:id="@+id/TextView06"
            android:text="1 grama/100 litros de água"
            android:layout_weight="1"
            android:background="#bfbfbf"
            android:textColor="#000000"
            android:padding="18dip"
            android:gravity="center"/>
    </TableRow>


</TableLayout>
